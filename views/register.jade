extends layout

block content
    form(action="/users/register", method="post")
        p
            label= "Username "
            input(type="text", name="username")
        p
            label= "Email "
            input(type="email", name="email")
        p
            label= "Password "
            input(type="password", name="password")
        p
            label= "Repeat Password "
            input(type="password", name="password-repeat")
        p
            button= "Submit"

    if errors
        each item in errors
            p= item.msg