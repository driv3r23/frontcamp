extends layout

block content
    if user
        p
            a(href="add", target="_blank") Add post
    each item in data
        article
            h2= item.title
            h3= item.author
            p= item.body
            if item.image
                p
                    img(src="#{item.image}", height="300")
            if user
                p
                    a(href="delete/#{item._id}") Delete
                    = " | "
                    a(href="edit/#{item._id}") Edit